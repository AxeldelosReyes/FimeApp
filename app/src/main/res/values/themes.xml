<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FimeApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="buttonStyle">@style/GreenButton</item>
        <item name="colorPrimary">@color/button_green</item>
        <item name="colorPrimaryDark">@color/button_green</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/black</item>
    </style>
    <style name="GreenButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/button_green</item>
    </style>
    <style name="CustomAlertDialogTitle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:textColor">#B3261E</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxBackgroundMode">none</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="RoundedShape">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.FimeApp" parent="Base.Theme.FimeApp" />
</resources>