<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/fragment_material_admin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/shadow_background"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/shadow_background">

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal">

            <View
                android:id="@+id/circleView"
                android:alpha="0.7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/green_circle" />

            <ImageView
                android:id="@+id/imageViewMaterial"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="clip_vertical"
                android:scaleType="fitCenter"
                android:src="@drawable/sample_image" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_marginLeft="15dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            >
            <TextView
                android:id="@+id/textViewDescriptionMaterial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Description"
                android:textSize="14sp"
                tools:text="Sample Description" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal">

            <View
                android:id="@+id/love"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:backgroundTint="@color/green_img"
                android:layout_height="match_parent"
                android:background="@drawable/baseline_favorite_border_24" />


        </FrameLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
